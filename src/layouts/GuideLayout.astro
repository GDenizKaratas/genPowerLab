---
import BaseLayout from './BaseLayout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import { Clock, ChevronLeft, ChevronRight, CheckCircle, Circle, PlayCircle, List } from 'lucide-astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    author?: string;
    pubDate: Date;
    updatedDate?: Date;
    readTime?: string;
    difficulty?: 'Başlangıç' | 'Orta' | 'İleri';
    category?: string;
    playlist?: string;
    playlistTitle?: string;
    order?: number;
    lang?: 'tr' | 'en';
  };
  playlistItems?: Array<{
    title: string;
    slug: string;
    order: number;
    readTime: string;
    isCompleted?: boolean;
    isCurrent: boolean;
  }>;
}

const { frontmatter, playlistItems = [] } = Astro.props;
const lang = frontmatter.lang || 'tr';

const difficultyColors = {
  'Başlangıç': 'bg-green-100 text-green-700',
  'Orta': 'bg-yellow-100 text-yellow-700',
  'İleri': 'bg-red-100 text-red-700',
};

const totalCount = playlistItems.length;

const currentIndex = playlistItems.findIndex(item => item.isCurrent);
const previousItem = currentIndex > 0 ? playlistItems[currentIndex - 1] : null;
const nextItem = currentIndex < playlistItems.length - 1 ? playlistItems[currentIndex + 1] : null;

const breadcrumbItems = [
  { label: 'Bilgi Merkezi', href: '/bilgi-merkezi' },
  { label: 'Teknik Rehberler', href: '/bilgi-merkezi/teknik-rehberler' },
  ...(frontmatter.playlistTitle ? [{ label: frontmatter.playlistTitle }] : [{ label: frontmatter.title }])
];
---

<BaseLayout
  title={`${frontmatter.title} - GenPowerLab`}
  description={frontmatter.description}
>
  <!-- Mobile Playlist Toggle (Fixed Bottom) -->
  {playlistItems.length > 0 && (
    <button
      id="playlist-toggle"
      class="lg:hidden fixed bottom-4 right-4 z-50 flex items-center gap-2 px-4 py-3 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700 transition-colors"
    >
      <List class="w-5 h-5" />
      <span class="text-sm font-medium">{currentIndex + 1}/{totalCount}</span>
    </button>
  )}

  <!-- Mobile Playlist Drawer -->
  <div
    id="playlist-drawer"
    class="lg:hidden fixed inset-0 z-50 transform translate-x-full transition-transform duration-300"
  >
    <div class="absolute inset-0 bg-black/50" id="playlist-overlay"></div>
    <div class="absolute right-0 top-0 bottom-0 w-80 max-w-[85vw] bg-white shadow-2xl overflow-y-auto">
      <div class="sticky top-0 bg-white border-b border-gray-200 p-4 flex items-center justify-between">
        <h3 class="font-bold text-gray-900">{frontmatter.playlistTitle || 'İçindekiler'}</h3>
        <button id="playlist-close" class="p-2 hover:bg-gray-100 rounded-lg">
          <ChevronRight class="w-5 h-5 text-gray-500" />
        </button>
      </div>
      <div class="p-2">
        {playlistItems.map((item, index) => (
          <a
            href={`/bilgi-merkezi/teknik-rehberler/${item.slug}`}
            class={`flex items-center gap-3 p-3 rounded-lg transition-colors ${
              item.isCurrent
                ? 'bg-blue-50 border-l-4 border-blue-600'
                : 'hover:bg-gray-50'
            }`}
          >
            <div class={`w-7 h-7 rounded-full flex items-center justify-center text-xs font-bold ${
              item.isCurrent
                ? 'bg-blue-600 text-white'
                : item.isCompleted
                ? 'bg-green-100 text-green-600'
                : 'bg-gray-100 text-gray-500'
            }`}>
              {item.isCompleted && !item.isCurrent ? (
                <CheckCircle class="w-4 h-4" />
              ) : (
                index + 1
              )}
            </div>
            <div class="flex-1 min-w-0">
              <p class={`text-sm font-medium truncate ${item.isCurrent ? 'text-blue-700' : 'text-gray-700'}`}>
                {item.title}
              </p>
              <p class="text-xs text-gray-500">{item.readTime}</p>
            </div>
            {item.isCurrent && (
              <PlayCircle class="w-5 h-5 text-blue-600 flex-shrink-0" />
            )}
          </a>
        ))}
      </div>
    </div>
  </div>

  <div class="container px-6 py-3">
    <Breadcrumb items={breadcrumbItems} />

    <div class="flex gap-8">
          <!-- Sidebar - Desktop Only -->
      {playlistItems.length > 0 && (
        <aside class="hidden lg:block w-72 flex-shrink-0">
          <div class="flex flex-col gap-4">
            <!-- Playlist Card (sticky) -->
            <div class="bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm sticky top-24 max-h-[calc(100vh-120px)] flex flex-col">
              <!-- Playlist Header -->
              <div class="p-4 bg-gradient-to-r from-blue-600 to-cyan-600 text-white">
                <h3 class="font-bold text-sm mb-2">
                  {frontmatter.playlistTitle || 'Rehber Serisi'}
                </h3>
                <p class="text-xs text-blue-100">
                  Bölüm {currentIndex + 1} / {totalCount}
                </p>
              </div>

              <!-- Playlist Items (scroll area) -->
              <div class="playlist-scroll flex-1 min-h-0 overflow-y-auto pr-1 pb-3">
                {playlistItems.map((item, index) => (
                  <a
                    href={`/bilgi-merkezi/teknik-rehberler/${item.slug}`}
                    class={`flex items-center gap-3 px-4 py-3 border-b border-gray-100 last:border-0 transition-colors ${
                      item.isCurrent ? 'bg-blue-50' : 'hover:bg-gray-50'
                    }`}
                  >
                    <div
                      class={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5 ${
                        item.isCurrent
                          ? 'bg-blue-600 text-white'
                          : item.isCompleted
                          ? 'bg-green-500 text-white'
                          : 'bg-gray-200 text-gray-500'
                      }`}
                    >
                      {item.isCompleted && !item.isCurrent ? (
                        <CheckCircle class="w-3.5 h-3.5" />
                      ) : (
                        index + 1
                      )}
                    </div>

                    <div class="flex-1 min-w-0">
                      <p
                        class={`text-sm leading-snug ${
                          item.isCurrent
                            ? 'font-semibold text-blue-700'
                            : 'font-medium text-gray-700'
                        }`}
                      >
                        {item.title}
                      </p>
                    </div>

                    {item.isCurrent && (
                      <div class="w-1.5 h-1.5 bg-blue-600 rounded-full animate-pulse flex-shrink-0 mt-2"></div>
                    )}
                  </a>
                ))}
              </div>
            </div>

            {/* <!-- Help Card (normal, sticky değil) -->
            <div class="p-4 rounded-xl border border-transparent bg-gradient-to-r from-blue-500 to-cyan-500 text-white shadow-lg">
              <p class="text-xs text-white/80 mb-3 uppercase tracking-[0.2em]">
                Destek
              </p>
              <p class="text-sm font-semibold mb-4">
                Jeneratör ve enerji projeleriniz için bize ulaşabilirsiniz.
              </p>
              <a
                href="/iletisim"
                class="block text-center px-4 py-2 bg-white text-blue-600 text-sm font-semibold rounded-lg hover:bg-blue-50 transition-colors"
              >
                İletişime Geçin
              </a>
            </div> */}
          </div>
            <!-- Help Card -->
            <div class="mt-4 p-4 rounded-xl border border-transparent bg-gradient-to-r from-blue-500 to-cyan-500 text-white shadow-lg">
              <p class="text-xs text-white/80 mb-3 uppercase tracking-[0.2em]">Destek</p>
              <p class="text-sm font-semibold mb-4">Jeneratör ve enerji projeleriniz için bize ulaşabilirsiniz.</p>
              <a
                href="/iletisim"
                class="block text-center px-4 py-2 bg-white text-blue-600 text-sm font-semibold rounded-lg hover:bg-blue-50 transition-colors"
              >
                İletişime Geçin
              </a>
            </div>
        </aside>

       
      )}





      <!-- Main Content -->
      <article class="flex-1 min-w-0">
        <!-- Article Header -->
        <header class="mb-8">
          <!-- Meta badges -->
          <div class="flex flex-wrap items-center gap-2 mb-4">
            {frontmatter.difficulty && (
              <span class={`px-2.5 py-1 text-xs font-semibold rounded-full ${difficultyColors[frontmatter.difficulty]}`}>
                {frontmatter.difficulty}
              </span>
            )}
            {frontmatter.category && (
              <span class="px-2.5 py-1 text-xs font-medium bg-blue-50 text-blue-600 rounded-full">
                {frontmatter.category}
              </span>
            )}
            <span class="flex items-center text-xs text-gray-500">
              <Clock class="w-3.5 h-3.5 mr-1" />
              {frontmatter.readTime || '5 dk okuma'}
            </span>
          </div>

          <!-- Title -->
          <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3 leading-tight">
            {frontmatter.title}
          </h1>

          <!-- Description -->
          <p class="text-gray-600 leading-relaxed">
            {frontmatter.description}
          </p>
        </header>

        <!-- Article Content -->
        <div class="prose prose-gray max-w-none
          prose-headings:font-bold prose-headings:text-gray-900
          prose-h2:text-xl prose-h2:mt-8 prose-h2:mb-4
          prose-h3:text-lg prose-h3:mt-6 prose-h3:mb-3
          prose-p:text-gray-700 prose-p:leading-relaxed prose-p:text-[15px]
          prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
          prose-strong:text-gray-900
          prose-code:text-blue-600 prose-code:bg-blue-50 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
          prose-code:before:content-[''] prose-code:after:content-['']
          prose-pre:bg-gray-900 prose-pre:rounded-lg
          prose-img:rounded-lg
          prose-ul:my-4 prose-ol:my-4
          prose-li:text-gray-700 prose-li:text-[15px] prose-li:my-1">
          <slot />
        </div>

        <!-- Navigation Footer -->
        <div class="mt-8 text-sm text-gray-500">
          Bölüm {currentIndex + 1} / {totalCount}
        </div>

        {(previousItem || nextItem) && (
          <nav class="mt-4 pt-6 border-t border-gray-200">
            <div class="grid grid-cols-2 gap-4">
              {previousItem ? (
                <a
                  href={`/bilgi-merkezi/teknik-rehberler/${previousItem.slug}`}
                  class="group flex items-center gap-3 p-4 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors"
                >
                  <ChevronLeft class="w-5 h-5 text-gray-500 group-hover:text-gray-700 flex-shrink-0" />
                  <div class="min-w-0">
                    <p class="text-xs text-gray-500 mb-1">Önceki</p>
                    <p class="text-sm font-medium text-gray-900 truncate">
                      {previousItem.title}
                    </p>
                  </div>
                </a>
              ) : (
                <div></div>
              )}

              {nextItem ? (
                <a
                  href={`/bilgi-merkezi/teknik-rehberler/${nextItem.slug}`}
                  class="group flex items-center justify-end gap-3 p-4 bg-gray-300 text-gray-800 rounded-xl hover:bg-gray-300 transition-colors col-start-2">
                  <div class="min-w-0 text-right">
                    <p class="text-xs text-gray-600 mb-1">Sonraki</p>
                    <p class="text-sm font-medium truncate">
                      {nextItem.title}
                    </p>
                  </div>
                  <ChevronRight class="w-5 h-5 flex-shrink-0" />
                </a>
              ) : (
                <a
                  href="/bilgi-merkezi/teknik-rehberler"
                  class="group flex items-center justify-end gap-3 p-4 bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300 transition-colors col-start-2"
                >
                  <div class="min-w-0 text-right">
                    <p class="text-xs text-gray-500 mb-1">Tamamlandı</p>
                    <p class="text-sm font-medium">Tüm Rehberler</p>
                  </div>
                  <CheckCircle class="w-5 h-5 flex-shrink-0" />
                </a>
              )}
            </div>
          </nav>
        )}
      </article>
    </div>
  </div>
</BaseLayout>

<style>
  /* Mobile drawer open state */
  .drawer-open #playlist-drawer {
    transform: translateX(0);
  }

  /* Prose blockquote */
  .prose blockquote {
    border-left: 3px solid #3b82f6;
    background: #f8fafc;
    padding: 1rem 1.25rem;
    border-radius: 0.5rem;
    font-style: normal;
    margin: 1.5rem 0;
  }

  .prose blockquote p {
    margin: 0;
    color: #475569;
  }

  /* Tables */
  .prose table {
    font-size: 0.875rem;
    margin: 1.5rem 0;
  }

  .playlist-scroll {
    scrollbar-width: thin;
    scrollbar-color: rgba(148, 163, 184, 0.7) transparent;
  }

  .playlist-scroll::-webkit-scrollbar {
    width: 6px;
  }

  .playlist-scroll::-webkit-scrollbar-track {
    background: transparent;
  }

  .playlist-scroll::-webkit-scrollbar-thumb {
    background-color: rgba(148, 163, 184, 0.7);
    border-radius: 9999px;
  }

  .prose th {
    background: #f9fafb;
    font-weight: 600;
    padding: 0.75rem;
  }

  .prose td {
    padding: 0.75rem;
    border-bottom: 1px solid #f3f4f6;
  }

</style>

<script>
  // Mobile playlist drawer
  const toggle = document.getElementById('playlist-toggle');
  const drawer = document.getElementById('playlist-drawer');
  const overlay = document.getElementById('playlist-overlay');
  const closeBtn = document.getElementById('playlist-close');

  function openDrawer() {
    document.body.classList.add('drawer-open');
    drawer?.classList.remove('translate-x-full');
  }

  function closeDrawer() {
    document.body.classList.remove('drawer-open');
    drawer?.classList.add('translate-x-full');
  }

  toggle?.addEventListener('click', openDrawer);
  overlay?.addEventListener('click', closeDrawer);
  closeBtn?.addEventListener('click', closeDrawer);
</script>
