---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SupportCTA from '../../components/ui/SupportCTA.astro';
import { ArrowRight, BookOpen, Wrench, Users, MessageCircle, Lightbulb, Shield, Zap } from 'lucide-astro';

const prefix = '/en';

const featuredArticles = [
  {
    title: 'Top 5 generator selection mistakes',
    excerpt: 'Learn how to avoid the most common oversizing and cabling errors.',
    category: 'Practical Guide',
    href: '/bilgi-merkezi/jenerator-secim-hatalari',
    readTime: '5 min',
    author: 'Mehmet Yılmaz'
  },
  {
    title: 'Home generator comparison cheat-sheet',
    excerpt: 'Real-life notes on which compact models make sense for households.',
    category: 'Home Solutions',
    href: '/bilgi-merkezi/ev-tipi-jeneratorler',
    readTime: '7 min',
    author: 'Ayşe Demir'
  },
  {
    title: 'Simple maintenance checklist',
    excerpt: 'Basic tasks you can perform safely between service visits.',
    category: 'Maintenance Tips',
    href: '/bilgi-merkezi/basit-bakim-kontrol',
    readTime: '4 min',
    author: 'Ali Kaya'
  },
  {
    title: 'Keep your business running during outages',
    excerpt: 'Budget friendly tactics for SMEs that cannot afford downtime.',
    category: 'Business Guide',
    href: '/bilgi-merkezi/enerji-kesintisi-cozum',
    readTime: '6 min',
    author: 'Can Öztürk'
  },
];

const communityFeatures = [
  {
    icon: Users,
    title: 'Community insight',
    description: 'Tap into lessons learned by thousands of operators.'
  },
  {
    icon: MessageCircle,
    title: 'Q&A support',
    description: 'Get answers from specialists and experienced users.'
  },
  {
    icon: Lightbulb,
    title: 'Practical fixes',
    description: 'Field-tested solutions for day-to-day issues.'
  },
  {
    icon: Shield,
    title: 'Reliable resources',
    description: 'Vendor-neutral, technically verified information.'
  }
];
---

<BaseLayout title="GenPowerLab - Generator & energy insights">
  <section class="relative min-h-[500px] lg:min-h-[600px] bg-gradient-to-br from-blue-50 via-white to-cyan-50">
    <div class="absolute inset-0 bg-[url('/images/old-generator.jpg')] bg-cover bg-center opacity-25"></div>
    <div class="relative container mx-auto px-4 lg:px-8 h-full flex items-center">
      <div class="max-w-4xl mx-auto text-center space-y-8 py-24">
        <div class="inline-flex items-center px-4 py-1 rounded-full bg-blue-50 border border-blue-100 text-xs font-semibold text-blue-700 tracking-wide uppercase mb-2">
          Generator & energy knowledge hub
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          Independent insights for
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-600">
            generator decisions
          </span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
          From sizing and installation to maintenance, we help you move faster with evidence-based guidance.
          <span class="text-blue-600 font-medium">Built with engineers, operators and service partners.</span>
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
          <a
            href={`${prefix}/bilgi-merkezi/teknik-rehberler`}
            class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl hover:shadow-xl hover:scale-105 transition-all duration-300 shadow-lg"
          >
            <Wrench class="w-5 h-5 mr-3" />
            <span>Explore guides</span>
            <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" />
          </a>
          <a
            href={`${prefix}/projeler`}
            class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-slate-800 bg-slate-50 border border-slate-200 rounded-xl hover:bg-slate-100 hover:border-slate-300 transition-all duration-300"
          >
            <BookOpen class="w-5 h-5 mr-3" />
            <span>See use cases</span>
          </a>
        </div>
        <div class="pt-8 border-t border-gray-200">
          <p class="text-gray-500 text-sm mb-4">Trusted by operators who manage:</p>
          <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span>50+ deep-dive articles</span>
            </div>
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span>24/7 outage playbooks</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 lg:py-20 bg-gradient-to-br from-blue-50 to-cyan-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Tools made for
          <span class="text-blue-600">decision makers</span>
        </h2>
        <p class="text-lg text-gray-600">
          Skip the spreadsheets—answer a few questions and get actionable outputs.
        </p>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl p-8 border border-gray-200 hover:shadow-xl transition-all duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
            <Zap class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Generator sizing assistant</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Feed in your loads and operating profile; receive recommended kVA, alternator class and practical cabling tips.
          </p>
          <a
            href="/uygulamalar/jenerator-secim"
            class="inline-flex items-center justify-center w-full py-4 bg-green-500 hover:bg-green-600 text-white rounded-xl font-semibold transition-colors shadow-lg hover:shadow-xl"
          >
            <Wrench class="w-5 h-5 mr-2" />
            Start the wizard
          </a>
        </div>
        <div class="bg-white rounded-2xl p-8 border border-gray-200 hover:shadow-xl transition-all duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
            <Shield class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Maintenance & troubleshooting kit</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Pinpoint symptoms, see recommended tests and quick fixes, and log what needs escalation.
          </p>
          <a
            href="/uygulamalar/bakim-asistan"
            class="inline-flex items-center justify-center w-full py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-xl font-semibold transition-colors shadow-lg hover:shadow-xl"
          >
            <Shield class="w-5 h-5 mr-2" />
            Diagnose an issue
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 lg:py-16 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
        <div>
          <span class="inline-flex items-center text-xs font-semibold uppercase tracking-[0.2em] text-blue-600">
            Featured reading
          </span>
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mt-2">
            Most bookmarked
            <span class="text-blue-600">articles</span>
          </h2>
        </div>
        <p class="text-sm text-gray-500 max-w-lg">
          Field notes, checklists and how-to’s that operators return to again and again.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {featuredArticles.map((article) => (
          <article class="group border border-slate-200 rounded-2xl p-5 bg-white hover:border-blue-200 hover:shadow-md transition-all duration-200">
            <div class="flex items-center justify-between text-xs text-gray-500 mb-4">
              <span class="inline-flex items-center px-2.5 py-1 rounded-full bg-slate-100 text-slate-700 font-semibold">
                {article.category}
              </span>
              <span class="flex items-center gap-2">
                <span>{article.readTime}</span>
                <span class="w-1 h-1 rounded-full bg-gray-300"></span>
                <span>{article.author}</span>
              </span>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 leading-snug mb-2 group-hover:text-blue-600 transition-colors">
              {article.title}
            </h3>
            <p class="text-sm text-gray-600 line-clamp-3">
              {article.excerpt}
            </p>
            <a
              href={article.href}
              class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-700"
            >
              Keep reading
              <ArrowRight class="w-4 h-4 ml-2" />
            </a>
          </article>
        ))}
      </div>
      <div class="mt-8 flex justify-center">
        <a
          href="/bilgi-merkezi"
          class="inline-flex items-center gap-2 px-5 py-3 text-sm font-semibold text-gray-800 border border-gray-200 rounded-xl hover:border-blue-300 hover:text-blue-600 transition-colors"
        >
          <BookOpen class="w-4 h-4" />
          Browse all content
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          A network of
          <span class="text-blue-600">practitioners</span>
        </h2>
        <p class="text-lg text-gray-600">
          Whether you run a single genset or an entire fleet, you can tap into the same knowledge base.
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {communityFeatures.map((feature) => {
          const Icon = feature.icon;
          return (
            <div class="bg-white border border-gray-200 rounded-2xl p-5 hover:shadow-md transition-all">
              <Icon class="w-6 h-6 text-blue-600 mb-3" />
              <h3 class="font-semibold text-gray-900 mb-1">{feature.title}</h3>
              <p class="text-sm text-gray-600">{feature.description}</p>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <SupportCTA
    title="Need guidance?"
    description="Share your generator or energy requirement and we’ll point you to the right resource or expert."
    buttonLabel="Talk to our team"
    link={`${prefix}/iletisim`}
    secondaryLabel="info@genpowerlab.com"
    badgeLabel="Support"
    note="Generator & energy platform"
  />
</BaseLayout>
