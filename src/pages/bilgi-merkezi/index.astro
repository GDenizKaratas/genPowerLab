              ? difficultyStyles[guide.data.difficulty as keyof typeof difficultyStyles]
              : null;

            return (
              <a
                href={`/bilgi-merkezi/teknik-rehberler/${slug}`}
                class="group bg-white rounded-xl border border-gray-200 p-4 hover:shadow-md hover:border-blue-200 transition-all"
              >
                <div class="flex items-center gap-2 mb-2">
                  {diffStyle && (
                    <span class={`px-2 py-0.5 text-xs font-medium rounded-full ${diffStyle.bg} ${diffStyle.text}`}>
                      {guide.data.difficulty}
                    </span>
                  )}
                  <span class="text-xs text-gray-400 flex items-center">
                    <Clock class="w-3 h-3 mr-1" />
                    {guide.data.readTime || '5 dk'}
                  </span>
                </div>
                <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors text-sm mb-1">
                  {guide.data.title}
                </h3>
                <p class="text-gray-500 text-xs line-clamp-1">
                  {guide.data.description}
                </p>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="bg-gray-50 rounded-xl p-8 text-center">
          <BookOpen class="w-10 h-10 text-gray-300 mx-auto mb-2" />
          <p class="text-gray-500 text-sm">Yakında yeni içerikler eklenecek.</p>
        </div>
      )}
    </section> -->

    <!-- Quick Tools CTA -->
    <section class="bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl p-6 lg:p-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <div class="text-white">
          <h2 class="text-xl font-bold mb-2">Hızlı Araçlar</h2>
          <p class="text-blue-100 text-sm">
            İhtiyacınıza uygun jeneratörü bulun veya sorunlarınızı çözün.
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href="/uygulamalar/jenerator-secim"
            class="inline-flex items-center justify-center px-5 py-3 bg-white text-blue-600 rounded-xl font-semibold text-sm hover:bg-gray-100 transition-colors"
          >
            <Zap class="w-4 h-4 mr-2" />
            Jeneratör Seç
          </a>
          <a
            href="/uygulamalar/bakim-asistan"
            class="inline-flex items-center justify-center px-5 py-3 bg-blue-500 text-white rounded-xl font-semibold text-sm hover:bg-blue-400 transition-colors border border-blue-400"
          >
            <Wrench class="w-4 h-4 mr-2" />
            Bakım Asistanı
          </a>
        </div>
      </div>
    </section>
  </div>
  <SupportCTA />
</BaseLayout>
