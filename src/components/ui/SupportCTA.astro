---
import { MessageCircle, ArrowRight, Mail } from 'lucide-react';

interface Props {
  title?: string;
  description?: string;
  buttonLabel?: string;
  link?: string;
  secondaryLabel?: string;
  secondaryLink?: string;
  badgeLabel?: string;
  note?: string;
}

const {
  title = 'Sorunuz mu var?',
  description = 'Jeneratör ve enerji konularında hızlıca doğru yardımı bulmanız için buradayız.',
  buttonLabel = 'İletişime geçin',
  link = '/iletisim',
  secondaryLabel = 'info@genpowerlab.com',
  secondaryLink = 'mailto:info@genpowerlab.com',
  badgeLabel = 'Destek',
  note = 'Jeneratör & enerji platformu',
} = Astro.props;
---

<section class="py-12">
  <div class="container mx-auto ">
    <div class="bg-gradient-to-r from-blue-500 to-cyan-500 text-white rounded-3xl px-6 py-10 lg:px-12 lg:py-12">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <div class="space-y-3 max-w-2xl">
          <div class="inline-flex items-center gap-2 text-xs font-semibold text-white/80 uppercase tracking-[0.2em]">
            <MessageCircle className="w-4 h-4" />
            {badgeLabel}
          </div>
          <h3 class="text-2xl lg:text-3xl font-bold">{title}</h3>
          <p class="text-sm text-blue-50">
            {description}
          </p>
          <p class="text-xs text-blue-100 uppercase tracking-[0.3em]">
            {note}
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href={link}
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-blue-600 rounded-xl font-semibold hover:bg-blue-50 transition-colors gap-2"
          >
            <MessageCircle className="w-4 h-4" />
            {buttonLabel}
            <ArrowRight className="w-4 h-4" />
          </a>
          <a
            href={secondaryLink}
            class="inline-flex items-center justify-center px-6 py-3 border border-white/40 rounded-xl text-sm font-medium text-white hover:border-white transition-colors gap-2"
          >
            <Mail className="w-4 h-4" />
            {secondaryLabel}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
